<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--성명 edt ok-->
    <!--학번 ed  okt-->
    <!--학과장 및 과 이름 spinner ok-->
    <!--우편번호 edt -->
    <!--학생은행 계좌번호 은행spinner ok -->
    <!--보호자 성명,관계, 직업  edt  ok-->
    <!--장애유무,장애구분,장애등급 유,무 ok-->


    <!--신청대상학기(년도,학기)  sn ok-->
    <!--입사건물 spinner-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColorHint="#000000"
                        android:layout_gravity="center"
                        android:id="@+id/sn_name_edt"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="이름"
                        android:textColor="#000000"
                        android:focusable="true"
                        android:text="임명준"/>
                </android.support.design.widget.TextInputLayout>

            </TableRow>

            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:hint="학번"
                        android:textColorHint="#000000"
                        android:id="@+id/sn_number_edt"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="201420030"/>

                </android.support.design.widget.TextInputLayout>


            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@+id/major_spin"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false">
                </Spinner>

            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:hint="학과장"
                        android:textColorHint="#000000"
                        android:id="@+id/chairman_of_major_edt"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="양재형 교수님"/>

                </android.support.design.widget.TextInputLayout>


            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/user_info_bank_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false">
                </Spinner>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/sn_acount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="계좌를 입력해주세요"
                        android:text="1002641865558"/>


                </android.support.design.widget.TextInputLayout>



            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="150dp"
                       android:layout_height="wrap_content">

                       <EditText
                           android:id="@+id/user_info_parents_name_edt1"
                           android:layout_width="200dp"
                           android:layout_height="wrap_content"
                           android:textColorHint="#000000"
                           android:hint="보호자 성명 "
                           android:text="이혜란"/>
                   </android.support.design.widget.TextInputLayout>

                   <Spinner
                       android:id="@+id/relation_parents_spin_1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_margin="3dp"
                       android:overlapAnchor="false">

                   </Spinner>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <EditText
                       android:id="@+id/user_info_parent_job_1"
                       android:layout_width="60dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="1"
                       android:hint="보호자 직업"
                       android:text="프리랜서"/>
               </LinearLayout>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/user_info_parents_name_edt2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000000"
                            android:hint="보호자 성명 "
                            android:text="임창모"/>
                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/relation_parents_spin_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:overlapAnchor="false">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/user_info_parent_job-2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:hint="보호자 직업"
                        android:text="사업가"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장애인 유무"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/unable_yes"
                        android:text="네"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/unable_no"
                        android:text="아니요"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/user_unable_edt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:hint="장애명 "/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/user_unable_rank_edt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:hint="등급"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 년도 학기"/>
        <Spinner
            android:id="@+id/apply_date_dormitory_spin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:overlapAnchor="false">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입사건물"/>
        <Spinner
            android:id="@+id/choose_dormitory_spin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:overlapAnchor="false">
        </Spinner>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/complete_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:text="저장"
            android:textColor="#ffffff" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


